package assignment_one;
import java.util.Scanner;

public class main {

	public static void main(String[] args) {
			Scanner keyboard = new Scanner(System.in);
			System.out.println("Data structure analysis: linked list and queue.\n Enter '0' to perform queue analysis. Enter '1' to perform linked list analysis.");
			int inputInt = keyboard.nextInt();

			if (inputInt == 0) {
					System.out.println("Enter queue capacity (integer): \t");
					int capacity = keyboard.nextInt();
					this.createQueue(capacity);
			}
			else if (inputInt == 1) {
					System.out.println("Enter linked list capacity (integer): \t");
					int capacity = keyboard.nextInt();
					this.createLinkedList(capacity);
			}
			else {
				System.out.println("Invalid input value.");
			}
	}

	public static void createQueue(int capacity) {
			// create queue object with capacity of 10
			QueueIm queue = new QueueIm(capacity);

			// add x items to queue
			for (int i = 0; i < capacity; i++) {
				queue.enqueue(i);
			}
			// remove all items from queue
			for (int i = 0; i < capacity; i++) {
				queue.dequeue();
			}
	}

	public static void createLinkedList(int capacity) {
			LinkedListIm<Integer> ll = new LinkedListIm<Integer>();

			for (int i = 0; i < capacity; i++) {
				ll.addAfter(null, i);
			}

			//ll.addAfter(76, 54);
			//ll.deleteAfter(76);
			ll.traverse(false);
			ll.addAfter(3, 100);
			//ll.traverse(false);
	}

}
